<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/discussion_responses_response_row">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <org.edx.mobile.view.custom.IconImageViewXml
            android:id="@+id/discussion_responses_answer_icon_view"
            android:layout_width="@dimen/edx_xxx_small"
            android:layout_height="@dimen/edx_xxx_small"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/discussion_responses_thread_text_view_spacing"
            android:layout_marginRight="@dimen/discussion_responses_thread_text_view_spacing"
            app:iconColor="@color/edx_utility_success"
            app:iconName="fa-check-square-o" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/discussion_responses_answer_icon_view"
            android:layout_toRightOf="@+id/discussion_responses_answer_icon_view"
            android:textSize="@dimen/edx_x_small"
            android:textColor="@color/edx_utility_success"
            android:text="@string/discussion_responses_answer" />

    </RelativeLayout>


</merge>
